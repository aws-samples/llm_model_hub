{
    "Version": "2008-10-17",
    "Statement": [
      {
        "Sid": "RestrictedAccountAccess",
        "Effect": "Allow",
        "Principal": {
          "AWS": "arn:${AWS_PARTITION}:iam::${AWS_ACCOUNT_ID}:root"
        },
        "Action": [
          "ecr:CompleteLayerUpload",
          "ecr:InitiateLayerUpload",
          "ecr:ListImages",
          "ecr:BatchCheckLayerAvailability",
          "ecr:BatchGetImage",
          "ecr:DescribeImages",
          "ecr:DescribeRepositories",
          "ecr:GetDownloadUrlForLayer"
        ]
      }
    ]
  }